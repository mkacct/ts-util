{
	"version": "2.0.0",
	"presentation": {
		"echo": false,
		"panel": "dedicated",
		"clear": true,
		"reveal": "silent",
		"close": true
	},
	"tasks": [
		{
			"label": "npm install",
			"runOptions": {"runOn": "folderOpen"},
			"type": "shell",
			"command": "npm install",
			"problemMatcher": []
		},
		{
			"label": "clean",
			"type": "npm",
			"script": "clean",
			"problemMatcher": []
		},
		{
			"label": "build",
			"group": {"kind": "build", "isDefault": true},
			"type": "npm",
			"script": "build",
			"presentation": {
				"reveal": "always"
			},
			"problemMatcher": []
		},
		{
			"label": "test",
			"group": {"kind": "test", "isDefault": true},
			"dependsOn": ["build"],
			"type": "npm",
			"script": "test",
			"options": {
				"env": {
					"NODE_ENV": "test"
				}
			},
			"presentation": {
				"reveal": "always",
				"close": false
			},
			"problemMatcher": []
		},
		{
			"label": "npm update",
			"type": "shell",
			"command": "npm update",
			"problemMatcher": []
		}
	]
}
